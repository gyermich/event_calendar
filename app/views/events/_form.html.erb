<div class="form_style">
  <%= form_for(@event) do |f| %>
    <% if @event.errors.any? %>
      <% @event.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    <% end %>

    <p>
      <div class="field">
        <%= f.label :name, "Name:" %> <br>
        <%= f.text_field :name %>
      </div>
    </p>
    <p>
      <div class="field">
       <%= f.label :description, "Details:" %> <br>
       <%= f.text_area :description, rows:"10", cols:"30" %>
      </div>
    </p>
    <p>
      <div class="field">
        <%= f.label :date, "Date:" %> <br>
        <%= f.datetime_local_field :date%>
      </div>
    </p>

    <p>
      <div class="field">
        <%= f.label :address, "Address:" %> <br>
        <%= f.text_field :address %>
      </div>
    </p>
    
    <div class="button" id="long">
      <%= f.submit %>
    </div>
  <% end %>
</div>